{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "videos": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "title",
          "tags",
          "date",
          "preview-image",
          "summary",
          "youtube-id",
          "url"
        ],
        "properties": {
          "title": {
            "type": "string"
          },
          "tags": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "date": {
            "type": "string",
            "format": "date-time"
          },
          "preview-image": {
            "type": "string",
            "format": "uri"
          },
          "summary": {
            "type": "string"
          },
          "youtube-id": {
            "type": "string",
            "pattern": "^[\\w-]{11}$"
          },
          "url": {
            "type": "string",
            "format": "uri"
          }
        },
        "additionalProperties": false
      }
    }
  },
  "required": ["videos"],
  "additionalProperties": false
}
