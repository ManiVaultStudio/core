{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "array",
  "items": {
    "type": "object",
    "properties": {
      "title": { "type": "string" },
	  "group": { "type": "string" },
      "url": { "type": "string" },
      "summary": { "type": "string" },
      "requiredPlugins": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "name": { "type": "string" },
            "repoName": { "type": "string" },
            "version": { "type": "string" }
          },
          "required": ["Name", "RepoName", "Version"],
          "additionalProperties": false
        }
      },
      "coreVersion": {
        "type": "object",
        "properties": {
          "major": { "type": "integer" },
          "minor": { "type": "integer" },
          "patch": { "type": "integer" },
          "suffix": { "type": "string" }
        },
        "required": ["Major", "Minor", "Patch", "Suffix"],
        "additionalProperties": false
      },
      "tags": {
        "type": "array",
        "items": { "type": "string" }
      },
      "date": { "type": "string" }
    },
    "required": ["Title", "Url", "Summary", "RequiredPlugins", "CoreVersion", "Tags", "Date"],
    "additionalProperties": false
  }
}