{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "array",
  "items": {
    "type": "object",
    "properties": {
      "title": { "type": "string" },
	  "group": { "type": "string" },
      "url": { "type": "string" },
      "summary": { "type": "string" },
      "requiredPlugins": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "name": { "type": "string" },
            "repoName": { "type": "string" },
            "version": { "type": "string" }
          },
          "required": ["name", "repoName", "version"],
          "additionalProperties": false
        }
      },
      "coreVersion": {
        "type": "object",
        "properties": {
          "major": { "type": "integer" },
          "minor": { "type": "integer" },
          "patch": { "type": "integer" },
          "suffix": { "type": "string" }
        },
        "required": ["major", "minor", "patch", "suffix"],
        "additionalProperties": false
      },
      "tags": {
        "type": "array",
        "items": { "type": "string" }
      },
      "date": { "type": "string" },
	  "size": {
		  "type": "integer",
		  "pattern": "^(\\d+)([KMGTP]i?B)$"
	  },
	  "hardwareRequirements": {
		  "cpu": {
			  "speed": "integer",
			  "cores": "integer",
			  "required": ["speed", "cores"]
		  }
		  "ram": {
			  "type": "integer",
			  "pattern": "^(\\d+)([KMGTP]i?B)$",
		  },
		  "storage": {
			  "type": "string",
			  "pattern": "^(\\d+)([KMGTP]i?B)$"
		  },
		  "gpu": {
			  "ram": {
				  "type": "string",
				  "pattern": "^(\\d+)([KMGTP]i?B)$"
			  }
			  "required": ["ram"]
		  }
		  "display": {
			  "minResolution": {
				  "horizontal": "integer",
				  "vertical": "integer"
			  },
			  "required": ["horizontal", "vertical"]
		  }
		}
    },
    "required": ["title", "url", "summary", "requiredPlugins", "coreVersion", "tags", "date"],
    "additionalProperties": true
  }
}